{
  "id": null,
  "uid": "java-microservices",
  "title": "Java Microservices & Container Monitoring",
  "tags": ["microservices", "java", "spring-boot", "docker"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Service JVM Heap Memory",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.8},
              {"color": "red", "value": 0.9}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Service JVM Non-Heap Memory",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Service CPU Usage",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "system_cpu_usage",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 10,
      "type": "stat",
      "title": "Kafka Container CPU",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"multimodule-project-kafka-1\"}[5m]) * 100",
          "legendFormat": "Kafka CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "JVM Memory Usage Over Time",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "{{instance}} Heap",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
          "legendFormat": "{{instance}} Non-Heap",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Kafka Container Resources",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"multimodule-project-kafka-1\"}",
          "legendFormat": "Kafka Memory",
          "refId": "A"
        },
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"multimodule-project-kafka-1\"}[5m]) * 100",
          "legendFormat": "Kafka CPU %",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Garbage Collection Activity",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(jvm_gc_memory_promoted_bytes_total[5m])",
          "legendFormat": "{{instance}} GC Promoted",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "HTTP Request Rate",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[5m])",
          "legendFormat": "{{instance}} {{method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "All Containers CPU Usage",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "All Containers Memory Usage",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "expr": "container_memory_usage_bytes",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Active Threads",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "jvm_threads_live",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Database Connections",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 32},
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 9,
      "type": "stat",
      "title": "HTTP Error Rate",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 32},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])",
          "legendFormat": "{{instance}} 5xx Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 14,
      "type": "stat",
      "title": "Kafka Container Memory",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 32},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"multimodule-project-kafka-1\"}",
          "legendFormat": "Kafka Memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(jvm_memory_used_bytes, instance)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "container",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(container_memory_usage_bytes, name)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  }
}